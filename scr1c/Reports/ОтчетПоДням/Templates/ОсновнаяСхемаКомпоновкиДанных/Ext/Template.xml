		<query>SELECT
	Реестр.Контрагент,
	CASE WHEN SUM(CASE WHEN Номенклатура = &amp;НомЕд THEN Масса ELSE 0 END)&lt;&gt;0 
	     THEN SUM(CASE WHEN Номенклатура = &amp;НомЕд THEN Сумма ELSE 0 END)/SUM(CASE WHEN Номенклатура = &amp;НомЕд THEN Масса ELSE 0 END)
	     ELSE 0 END ЦенаЕд,
	CASE WHEN SUM(CASE WHEN Номенклатура &lt;&gt; &amp;НомЕд THEN Масса ELSE 0 END)&lt;&gt;0 
	     THEN SUM(CASE WHEN Номенклатура &lt;&gt; &amp;НомЕд THEN Сумма ELSE 0 END)/SUM(CASE WHEN Номенклатура &lt;&gt; &amp;НомЕд THEN Масса ELSE 0 END)
	     ELSE 0 END ЦенаТн
	     
INTO врЦен
ИЗ
	Документ.РегистрацияПроезда КАК Реестр
ГДЕ
	Реестр.Дата &gt;= &amp;Дата1
	И Реестр.Дата &lt; &amp;Дата2
	И Реестр.ПометкаУдаления = Ложь

GROUP BY Реестр.Контрагент	
	
;




ВЫБРАТЬ
	Реестр.Контрагент,
	НачалоПериода(Реестр.Дата,День) как Дата,
	SUM(CASE WHEN Номенклатура = &amp;НомЕд THEN сумма ELSE 0 END) СумЕд,
	SUM(CASE WHEN Номенклатура = &amp;НомЕд THEN масса ELSE 0 END) КолЕд,
	SUM(CASE WHEN Номенклатура &lt;&gt; &amp;НомЕд THEN сумма ELSE 0 END) СумТн,
	SUM(CASE WHEN Номенклатура &lt;&gt; &amp;НомЕд THEN масса ELSE 0 END) КолТн,
	SUM(Реестр.сумма) как итогСумма,
	SUM(Реестр.масса) итогМасса,
	AVG(Реестр.масса) СредняяМасса,
	тбЦен.ЦенаЕд,
	тбЦЕн.ЦенаТн
	
	
ИЗ
	Документ.РегистрацияПроезда КАК Реестр
INNER JOIN врЦен тбЦен ON тбЦен.Контрагент = Реестр.Контрагент
ГДЕ
	Реестр.Дата &gt;= &amp;Дата1
	И Реестр.Дата &lt; &amp;Дата2  
	И Реестр.ПометкаУдаления = Ложь	
GROUP by   
	Реестр.Контрагент,
	НачалоПериода(Реестр.Дата,День) ,  
		тбЦен.ЦенаЕд,
	тбЦЕн.ЦенаТн




</query>
